@model FileManager.Models.IndexViewModel

<link href="~/Styles/ManageRoles.css" rel="stylesheet" />

@{
    ViewBag.Title = "AddRole";
}
<h2>AddRole</h2>
@using (Html.BeginForm())
{
    <input readonly disabled hidden value="@Model.Id" id="id" name="id" />
    <select id="role" name="role">
        @foreach (var role in Model.Roles)
        {
            <option value="@role">@role</option>
        }
    </select>
    <input type="submit" value="submit" />
}
